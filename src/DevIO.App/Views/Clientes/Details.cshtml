@model DevIO.App.Models.ClienteViewModel.ClienteViewModel
@using DevIO.Business.Enums; 

@{
    ViewData["Title"] = $"Detalhe do {Model.NomeCompleto}";
}

<h4>@ViewData["Title"]</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Tipo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoPessoa)
        </dd>
        <dt class="col-sm-2">
            CPF/CNPJ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CpfCnpj)
        </dd>
        <dt class="col-sm-2">
            Nome Contato
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeCompleto)
        </dd>
        <dt class="col-sm-2">
            Telefone Contato
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TelefoneContato)
        </dd>
        <dt class="col-sm-2">
            E-mail Contato
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmailContato)
        </dd>
        @if (Model.TipoPessoa == ETipoPessoa.PessoaJuridica)
        {
            <dt class="col-sm-2">
                Razão Social
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RazaoSocial)
            </dd>
            <dt class="col-sm-2">
                Nome Fantasia
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NomeFantasia)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-warning">Voltar</a>
</div>
