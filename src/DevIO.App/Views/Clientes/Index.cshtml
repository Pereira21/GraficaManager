@model IEnumerable<DevIO.Business.Models.Cliente>

@{
    ViewData["Title"] = "Listagem de Clientes";
}

<h4>@ViewData["Title"]</h4>
<hr />
<p>
    <a class="btn btn-primary" asp-action="Create">Adicionar</a>
</p>

<vc:summary></vc:summary>

<table class="table table-hover table-striped">
    <thead>
        <tr class="thead-dark">
            <th>Tipo</th>
            <th>CPF / CNPJ</th>
            <th>Nome Completo</th>
            <th>Razão Social</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.TipoPessoa.ToString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CpfCnpj)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeCompleto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RazaoSocial)
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-search"></i></a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
